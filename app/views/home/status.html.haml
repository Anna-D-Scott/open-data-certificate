- content_for :header_title do
  Application Status



.pull-right
  Last commit
  = link_to @head_commit[0..6] , "https://github.com/theodi/open-data-certificate/commit/#{@head_commit}", class: 'badge'


%h1
  Job queue

%p
  %strong= pluralize @job_count, 'jobs'
  queued

%hr.heavy

%h1
  Counts

- ['published', 'all'].each do |type|

  %h2= "#{type.humanize.capitalize} certificates"

  %ul
    - ['all', 'expired', 'this_month', 'publishers'].each do |a|
      %li{ class: "#{type}-#{a}" }
        %strong= a.humanize
        = instance_variable_get("@#{type}").send(a)

    %li
      %strong Levels
      %ul
        - ['none', 'basic', 'pilot', 'standard', 'exemplar'].each do |level|
          %li{ class: "#{type}-#{level}" }
            %strong= level.humanize
            = instance_variable_get("@#{type}").send("level_#{level}")
  %p
    =link_to "Get historic data", status_path(format: "csv", type: type)

  %hr.heavy
